<Window x:Class="UclePdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        xmlns:conv="clr-namespace:UclePdf.Core.Converters"
        mc:Ignorable="d"
        Title="UCLE PDF" Height="900" Width="1200" WindowState="Maximized">
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <!-- Restored classic styles required by existing XAML references -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ReportButtonBase" TargetType="Button">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#90A4AE"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="Root" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>
                            <Border x:Name="Card" CornerRadius="14" Background="{TemplateBinding Background}" Padding="10" SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.22"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Card" Property="Background" Value="#B0BEC5"/>
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.04" ScaleY="1.04"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern button styles -->
        <Style x:Key="ModernButtonBase" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.35"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bg" Property="Background" Value="#1E74D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="Bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bg" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Bg" Property="BorderBrush" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernButtonDanger" BasedOn="{StaticResource ModernButtonBase}" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bg" Property="Background" Value="#E53A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="Bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernButtonNeutral" BasedOn="{StaticResource ModernButtonBase}" TargetType="Button">
            <Setter Property="Background" Value="#546E7A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.35"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bg" Property="Background" Value="#607D8B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="Bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern input styles -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="#FFFFFF" CornerRadius="6" BorderBrush="#CFD8DC" BorderThickness="1" Padding="6,4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#90A4AE"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1565C0"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CFD8DC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CFD8DC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabItem Header="Pedidos">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <GroupBox Header="Pedidos (Excel)" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Archivo Pedidos:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding PathA}" Margin="0,0,6,0" Style="{StaticResource ModernTextBox}"/>
                                    <Button Grid.Column="2" Command="{Binding BrowsePedidosCommand}" Style="{StaticResource ModernButtonBase}" Margin="0,0,6,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                            <TextBlock Text="Buscar"/>
                                        </StackPanel>
                                    </Button>
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0,6,0">
                                        <TextBlock Text="Desde" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <DatePicker SelectedDate="{Binding FilterFromDate, Mode=TwoWay}" Width="140" Style="{StaticResource ModernDatePicker}"/>
                                    </StackPanel>
                                    <Button Grid.Column="4" Command="{Binding LoadPedidosCommand}" Style="{StaticResource ModernButtonNeutral}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                            <TextBlock Text="Cargar"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="1" Header="Filtros" Padding="10" Margin="0,10,0,0">
                                <DockPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" MaxWidth="1400">
                                        <TextBlock Text="Sucursal" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <ComboBox ItemsSource="{Binding SucursalesOpciones}" SelectedItem="{Binding FilterSucursal, Mode=TwoWay}" Margin="0,0,12,0" MinWidth="140" Style="{StaticResource ModernComboBox}"/>
                                        <TextBlock Text="Veterinario" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding FilterVeterinario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0" MinWidth="140" Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Propietario" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding FilterPropietario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0" MinWidth="140" Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Paciente" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <TextBox Text="{Binding FilterPaciente, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0" MinWidth="140" Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Especie" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <ComboBox ItemsSource="{Binding EspecieFiltroOpciones}" SelectedItem="{Binding FilterEspecie, Mode=TwoWay}" Margin="0,0,12,0" MinWidth="140" Style="{StaticResource ModernComboBox}"/>
                                    </StackPanel>
                                </DockPanel>
                            </GroupBox>

                            <GroupBox Grid.Row="2" Header="Vista previa" Padding="10" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Pedidos" FontWeight="Bold"/>
                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding Pedidos}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="False"
                                              SelectedItem="{Binding SelectedPedido, Mode=TwoWay}"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              Height="400">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Marca temporal" Binding="{Binding MarcaTemporal, StringFormat=dd/MM/yyyy HH:mm}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Correo" Binding="{Binding CorreoElectronico}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Sucursal" Binding="{Binding Sucursal}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Veterinario" Binding="{Binding VeterinarioSolicitante}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Propietario" Binding="{Binding Propietario}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Paciente" Binding="{Binding NombrePaciente}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Especie" Binding="{Binding EspecieFinal}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Sexo" Binding="{Binding Sexo}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Raza" Binding="{Binding Raza}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Edad" Binding="{Binding EdadDescripcion}" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Command="{Binding ConfirmSelectionCommand}" Style="{StaticResource ModernButtonBase}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                        <TextBlock Text="Confirmar"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ClearAllCommand}" Style="{StaticResource ModernButtonDanger}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                        <TextBlock Text="Limpiar"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Informe" IsEnabled="{Binding IsInformeEnabled}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Tarjeta de encabezado -->
                            <Border Padding="14" Margin="0,0,0,20" CornerRadius="6" Background="#FFF8FAFC" BorderBrush="#FF1976D2" BorderThickness="1" SnapsToDevicePixels="True">
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="LABORATORIO DE ANÁLISIS CLÍNICOS" DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="170"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <!-- Etiquetas -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Fecha:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Paciente:"  FontWeight="Bold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Edad / Especie / Raza / Sexo:"  FontWeight="Bold" TextWrapping="Wrap"/>
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Propietario:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Veterinario solicitante:" FontWeight="Bold" TextWrapping="Wrap"/>
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="UCLE (sucursal):" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Bioquímico:" FontWeight="Bold"/>
                                        <!-- Valores -->
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding HeaderFecha}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding HeaderPaciente}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding HeaderLinea2}"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding HeaderPropietario}"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding HeaderVeterinario}"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding HeaderSucursal}"/>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Bioquimico}"/>
                                    </Grid>
                                </DockPanel>
                            </Border>

                            <!-- Botones de informes en grilla uniforme -->
                            <UniformGrid Columns="5" Rows="0" Margin="0,0,0,10">
                                <Button Command="{Binding OpenHemogramaCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHemogramaLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Hemograma" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsHemogramaLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenQuimicaCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsQuimicaLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Química sanguínea" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsQuimicaLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenOrinaCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOrinaLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Orina completa" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsOrinaLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenHemostasiaCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHemostasiaLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Hemostasia" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsHemostasiaLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenFrotisCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFrotisLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Frotis" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsFrotisLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenCoproCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCoproLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Coproparasitológico" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsCoproLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenEhrlichiosisCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEhrlichiosisLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Ehrlichiosis canina (IC)" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsEhrlichiosisLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenRaspajeCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRaspajeLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>
                                        <TextBlock Text="Raspaje de piel" TextAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,6,0,0" HorizontalAlignment="Center" Visibility="{Binding IsRaspajeLoaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding OpenReticulocitosCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ReportButtonBase}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsReticulocitosLoaded}" Value="True">
                                                    <Setter Property="Background" Value="#009688"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel>

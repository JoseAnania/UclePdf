<Window x:Class="UclePdf.Views.LiquidoPuncionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        xmlns:conv="clr-namespace:UclePdf.Converters"
        Title="Liquido de puncion" Height="860" Width="980">
    <Window.Resources>
        <conv:StringToDoubleInvariantConverter x:Key="StringToDouble"/>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E0E6EC"/>
        <SolidColorBrush x:Key="CardBorderHover" Color="#B5C6D6"/>
        <SolidColorBrush x:Key="InputBorder" Color="#B8C4CE"/>
        <SolidColorBrush x:Key="InputBorderHover" Color="#7FA6C5"/>
        <SolidColorBrush x:Key="InputBorderFocus" Color="#1565C0"/>
        <SolidColorBrush x:Key="ErrorBorder" Color="#D32F2F"/>

        <Style x:Key="LpCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource CardBorderHover}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.18"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumericInput" TargetType="TextBox">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderHover}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderFocus}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource ErrorBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:LiquidoPuncionViewModel/>
    </Window.DataContext>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Cards texto -->
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource LpCard}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding Determinacion}" FontWeight="SemiBold" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                    <Border Grid.Row="1" BorderBrush="#D6DEE5" BorderThickness="1" Background="White" CornerRadius="6">
                                        <TextBox BorderThickness="0" Padding="6,4" Height="34" Text="{Binding Resultado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="False" TextWrapping="NoWrap"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Card Bioquimica -->
                <Border Style="{StaticResource LpCard}" Width="930">
                    <StackPanel>
                        <TextBlock Text="Bioquimica" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,10"/>
                        <UniformGrid Columns="4" Rows="2" Margin="0,0,0,4">
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Urea" FontWeight="Bold"/>
                                <TextBox Text="{Binding Urea, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Creatinina" FontWeight="Bold"/>
                                <TextBox Text="{Binding Creatinina, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="FAL" FontWeight="Bold"/>
                                <TextBox Text="{Binding FAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Colesterol Total" FontWeight="Bold"/>
                                <TextBox Text="{Binding ColesterolTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Trigliceridos" FontWeight="Bold"/>
                                <TextBox Text="{Binding Trigliceridos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Bilirrubina Total" FontWeight="Bold"/>
                                <TextBox Text="{Binding BilirrubinaTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Bilirrubina Directa" FontWeight="Bold"/>
                                <TextBox Text="{Binding BilirrubinaDirecta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,18,12">
                                <TextBlock Text="Bilirrubina Indirecta" FontWeight="Bold"/>
                                <TextBox Text="{Binding BilirrubinaIndirecta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}"/>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Card Observaciones -->
                <Border Style="{StaticResource LpCard}" Width="930" Margin="8,8,8,0">
                    <StackPanel>
                        <TextBlock Text="Observaciones" FontWeight="Bold" Margin="0,0,0,6"/>
                        <Border BorderBrush="#D6DEE5" BorderThickness="1" Background="White" CornerRadius="6">
                            <TextBox BorderThickness="0" Padding="8,6" Text="{Binding Observaciones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="140" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,18,0,0">
            <Button Width="170" Height="44" Style="{StaticResource ModernButtonBase}" Click="OnConfirmClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10B;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Confirmar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Width="160" Height="44" Style="{StaticResource ModernButtonDanger}" Click="OnClearClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE107;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
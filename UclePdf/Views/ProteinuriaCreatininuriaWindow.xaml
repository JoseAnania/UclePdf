<Window x:Class="UclePdf.Views.ProteinuriaCreatininuriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        xmlns:conv="clr-namespace:UclePdf.Converters"
        Title="Relacion Proteinuria / Creatininuria" Height="560" Width="900">
    <Window.Resources>
        <conv:StringToDoubleInvariantConverter x:Key="StringToDouble"/>
        <!-- Brushes -->
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E0E6EC"/>
        <SolidColorBrush x:Key="CardBorderHover" Color="#B5C6D6"/>
        <SolidColorBrush x:Key="InputBorder" Color="#B8C4CE"/>
        <SolidColorBrush x:Key="InputBorderHover" Color="#7FA6C5"/>
        <SolidColorBrush x:Key="InputBorderFocus" Color="#1565C0"/>
        <SolidColorBrush x:Key="ErrorBorder" Color="#D32F2F"/>

        <!-- Numeric input style -->
        <Style x:Key="NumericInput" TargetType="TextBox">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderHover}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderFocus}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource ErrorBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card style -->
        <Style x:Key="PcrCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="MaxWidth" Value="280"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource CardBorderHover}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.18"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Referencias card (full width row) -->
        <Style x:Key="RefCard" TargetType="Border" BasedOn="{StaticResource PcrCard}">
            <Setter Property="MinWidth" Value="820"/>
            <Setter Property="MaxWidth" Value="Infinity"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:ProteinuriaCreatininuriaViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cards -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource PcrCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding Determinacion}" FontWeight="SemiBold" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Valor:" FontWeight="Bold" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding Valor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDouble}}" Style="{StaticResource NumericInput}" PreviewTextInput="OnPreviewTextInputNumeric" PreviewKeyDown="OnPreviewKeyDownNumeric"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <StackPanel>
                            <ItemsPresenter/>
                            <!-- Referencias block as separate card after items -->
                            <Border Style="{StaticResource RefCard}" Margin="8,12,8,4">
                                <StackPanel>
                                    <TextBlock Text="Valores de referencia" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding DataContext.ReferenciasBloque, RelativeSource={RelativeSource AncestorType=ItemsControl}}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </ScrollViewer>

        <!-- Observaciones -->
        <StackPanel Grid.Row="1" Margin="0,16,0,0">
            <TextBlock Text="Observaciones" FontWeight="Bold" Margin="0,0,0,4"/>
            <Border CornerRadius="6" BorderBrush="#E0E6EC" BorderThickness="1" Background="White">
                <TextBox BorderThickness="0" Padding="8,6" Text="{Binding Observaciones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="110" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button Width="170" Height="44" Style="{StaticResource ModernButtonBase}" Click="OnConfirmClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10B;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Confirmar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Width="160" Height="44" Style="{StaticResource ModernButtonDanger}" Click="OnClearClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE107;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="UclePdf.Views.OrinaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        Title="Orina Completa" Height="600" Width="900">
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="GroupItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupItem">
                        <StackPanel>
                            <Border Background="#f0f0f0" Padding="6" Margin="0,8,0,4">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            </Border>
                            <ItemsPresenter/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <CollectionViewSource x:Key="OrinaGrouped" Source="{Binding Items}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Seccion"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <Style x:Key="TopSeparatorCellStyle" TargetType="DataGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding TopSeparator}" Value="True">
                    <Setter Property="BorderThickness" Value="0,1,0,0"/>
                    <Setter Property="BorderBrush" Value="#808080"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RightAlignedTextBox" TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style x:Key="RightAlignedTextBlock" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <!-- Editing style attaches numeric handlers; code-behind decides if applies based on IsNumeric -->
        <Style x:Key="ValorEditingStyle" TargetType="TextBox" BasedOn="{StaticResource RightAlignedTextBox}">
            <EventSetter Event="PreviewTextInput" Handler="OnPreviewTextInputNumeric"/>
            <EventSetter Event="PreviewKeyDown" Handler="OnPreviewKeyDownNumeric"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:OrinaViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" ItemsSource="{Binding Source={StaticResource OrinaGrouped}}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" RowBackground="White" AlternatingRowBackground="White">
            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource SectionHeader}"/>
            </DataGrid.GroupStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Determinacion" Binding="{Binding Determinacion}" IsReadOnly="True" Width="*" CellStyle="{StaticResource TopSeparatorCellStyle}"/>
                <DataGridTextColumn Header="Valor hallado" Width="220" Binding="{Binding Valor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CellStyle="{StaticResource TopSeparatorCellStyle}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedTextBlock}">
                            <Setter Property="Text" Value="{Binding Valor}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox" BasedOn="{StaticResource ValorEditingStyle}"/>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Valor ref caninos" Binding="{Binding RefCaninos}" IsReadOnly="True" Width="200" CellStyle="{StaticResource TopSeparatorCellStyle}"/>
                <DataGridTextColumn Header="Valor ref felinos" Binding="{Binding RefFelinos}" IsReadOnly="True" Width="200" CellStyle="{StaticResource TopSeparatorCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock Text="Observaciones" FontWeight="Bold"/>
            <TextBox Text="{Binding Observaciones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Width="170" Height="44" Style="{StaticResource ModernButtonBase}" Click="OnConfirmClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10B;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Confirmar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Width="160" Height="44" Style="{StaticResource ModernButtonDanger}" Click="OnClearClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE107;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
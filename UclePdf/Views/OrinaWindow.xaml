<Window x:Class="UclePdf.Views.OrinaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        Title="Orina Completa" Height="600" Width="960">
    <Window.Resources>
        <CollectionViewSource x:Key="OrinaGrouped" Source="{Binding Items}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Seccion"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <!-- Brushes -->
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E0E6EC"/>
        <SolidColorBrush x:Key="CardBorderHover" Color="#B5C6D6"/>
        <SolidColorBrush x:Key="InputBorder" Color="#B8C4CE"/>
        <SolidColorBrush x:Key="InputBorderHover" Color="#7FA6C5"/>
        <SolidColorBrush x:Key="InputBorderFocus" Color="#1565C0"/>
        <SolidColorBrush x:Key="ErrorBorder" Color="#D32F2F"/>

        <!-- Card style -->
        <Style x:Key="OrinaCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource CardBorderHover}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.18"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Valor input -->
        <Style x:Key="ValorInput" TargetType="TextBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderHover}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderFocus}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource ErrorBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RefText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <DataTemplate x:Key="CardTemplate">
            <Border Style="{StaticResource OrinaCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Determinacion}" FontWeight="SemiBold" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,6"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Valor:" FontWeight="Bold" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Valor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ValorInput}" PreviewTextInput="OnPreviewTextInputNumeric" PreviewKeyDown="OnPreviewKeyDownNumeric"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Vertical">
                        <TextBlock Style="{StaticResource RefText}"><Run Text="Caninos: "/><Run Text="{Binding RefCaninos, Mode=OneWay}" FontWeight="SemiBold"/></TextBlock>
                        <TextBlock Style="{StaticResource RefText}" Margin="0,2,0,0"><Run Text="Felinos: "/><Run Text="{Binding RefFelinos, Mode=OneWay}" FontWeight="SemiBold"/></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template para cada grupo -->
        <DataTemplate x:Key="GroupTemplate">
            <StackPanel>
                <Border Background="#F2F6FA" BorderBrush="#D5E2EC" BorderThickness="1" CornerRadius="8" Padding="10,7" Margin="0,18,0,6">
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="15"/>
                </Border>
                <ItemsControl ItemsSource="{Binding Items}" ItemTemplate="{StaticResource CardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <vm:OrinaViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <!-- ItemsControl sobre los grupos (uno debajo del otro) -->
            <ItemsControl ItemsSource="{Binding Source={StaticResource OrinaGrouped}, Path=Groups}" ItemTemplate="{StaticResource GroupTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Observaciones -->
        <StackPanel Grid.Row="1" Margin="0,14,0,0">
            <TextBlock Text="Observaciones" FontWeight="Bold" Margin="0,0,0,4"/>
            <Border CornerRadius="6" BorderBrush="#E0E6EC" BorderThickness="1" Background="White">
                <TextBox BorderThickness="0" Padding="8,6" Text="{Binding Observaciones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14,0,0">
            <Button Width="170" Height="44" Style="{StaticResource ModernButtonBase}" Click="OnConfirmClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10B;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Confirmar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Width="160" Height="44" Style="{StaticResource ModernButtonDanger}" Click="OnClearClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE107;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
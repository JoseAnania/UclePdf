<Window x:Class="UclePdf.Views.EhrlichiosisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        Title="Ehrlichiosis canina (IC)" Height="430" Width="760">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF1976D2"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FFD32F2F"/>
        </Style>
        <Style x:Key="HeaderCell" TargetType="Border">
            <Setter Property="Background" Value="#FFEFEFEF"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="BodyCell" TargetType="Border">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:EhrlichiosisViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tabla estilo VIF/VILeF -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Encabezados -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCell}"><TextBlock Text="Tecnica empleada" FontWeight="Bold"/></Border>
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCell}"><TextBlock Text="Resultado" FontWeight="Bold"/></Border>

            <!-- Cuerpo -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource BodyCell}">
                <TextBlock FontWeight="Bold" TextWrapping="Wrap">
                    <Run Text="Inmunocromatografia (IC)"/>
                    <LineBreak/>
                    <Run Text="Speed Ehrlichia"/>
                </TextBlock>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource BodyCell}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Width="180" ItemsSource="{Binding ResultadosPosibles}" SelectedItem="{Binding Items[0].Resultado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="Observaciones" FontWeight="Bold"/>
            <TextBox Text="{Binding Observaciones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="140" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
            <Button Width="170" Height="44" Style="{StaticResource ModernButtonBase}" Click="OnConfirmClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10B;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Confirmar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button Width="160" Height="44" Style="{StaticResource ModernButtonDanger}" Click="OnClearClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE107;" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Limpiar" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="UclePdf.Views.FrotisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UclePdf.ViewModels"
        Title="Frotis" Height="300" Width="800">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF1976D2"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FFD32F2F"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:FrotisViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Observacion Directa de Frotis para parasitos Sanguineos" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" Text="{Binding Resultado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
            <Button Content="Confirmar" Width="160" Height="36" Click="OnConfirmClick" Style="{StaticResource PrimaryButton}"/>
            <Button Content="Limpiar" Width="140" Height="36" Click="OnClearClick" Style="{StaticResource DangerButton}"/>
        </StackPanel>
    </Grid>
</Window>
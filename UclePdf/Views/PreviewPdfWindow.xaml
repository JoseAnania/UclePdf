<Window x:Class="UclePdf.Views.PreviewPdfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Vista previa Informe" Height="800" Width="900">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
                <Button Content="Guardar PDF" Width="120" Margin="0,0,8,0" Click="OnSaveClick"/>
                <TextBlock Text="Vista previa (PDF renderizado como data URI)" VerticalAlignment="Center"/>
            </StackPanel>
            <wv2:WebView2 x:Name="Browser" />
        </DockPanel>
    </Grid>
</Window>